<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
		<resource-bundle>
			<base-name>com.AptiTekk.application</base-name>
			<var>settings</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>com.AptiTekk.style</base-name>
			<var>style</var>
		</resource-bundle>
	</application>
    <managed-bean>
    	<managed-bean-name>EntryController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.EntryController</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>LoginController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.LoginController</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>ContestantController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.ContestantController</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>ManagerController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.ManagerController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<description>Converts Poll objects to and from Strings.</description>
    	<managed-bean-name>PollConverter</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.converters.PollConverter</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>ModifyContestantController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.ModifyContestantController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>VotingController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.VotingController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>AuthenticationController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.AuthenticationController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>manage</from-outcome>
    		<to-view-id>/admin/manage.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/admin/manage.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>modifyVoteGroup</from-outcome>
    		<to-view-id>/admin/modifyVoteGroup.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>login</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>vote</from-outcome>
    		<to-view-id>/vote.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>authenticate</from-outcome>
    		<to-view-id>/authenticate.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
</faces-config>
