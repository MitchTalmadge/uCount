<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
		<resource-bundle>
			<base-name>com.AptiTekk.application</base-name>
			<var>settings</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>com.AptiTekk.style</base-name>
			<var>style</var>
		</resource-bundle>
	</application>
    <managed-bean>
    	<managed-bean-name>LoginController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.LoginController</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>ManagerController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.ManagerController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>VotingController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.VotingController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>ModifyVoteGroupController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.ModifyVoteGroupController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>PollEntriesController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.PollEntriesController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>LoadTestController</managed-bean-name>
    	<managed-bean-class>com.AptiTekk.Poll.web.controllers.LoadTestController</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>manage</from-outcome>
    		<to-view-id>/admin/manage.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<from-view-id>/admin/manage.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>modifyVoteGroup</from-outcome>
    		<to-view-id>/admin/modifyVoteGroup.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>login</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>vote</from-outcome>
    		<to-view-id>/vote.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>pollEntries</from-outcome>
    		<to-view-id>/admin/pollEntries.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <navigation-rule>
    	<display-name>*</display-name>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>liveResults</from-outcome>
    		<to-view-id>/admin/liveResults.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    <validator>
    	<validator-id>ImageFileValidator</validator-id>
    	<validator-class>com.AptiTekk.Poll.core.utilities.ImageFileValidator</validator-class>
    </validator>
</faces-config>
